<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed ? "[X] This task is completed" : "[ ] This task is not completed yet"  %></p>
<h5><%= link_to "Edit task", edit_path  %></h5>
<h5><%= link_to "Delete task", destroy_task_path(@task), method: :delete, data: {confirm: "Are you sure ?"}  %></h5>
<h5><%= link_to "Back to list", tasks_path  %></h5>
